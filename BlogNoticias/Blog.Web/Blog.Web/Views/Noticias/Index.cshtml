@model IEnumerable<Blog.Web.Models.Noticia>

@{
    ViewBag.Title = "Index";
}

<h2>Notícias</h2>

<p>
    @Html.ActionLink("Adicionar Notícia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataDaPublicacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assunto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>Ações</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataDaPublicacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDNoticias })
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.IDNoticias })
            </td>
            <td>
                @Html.ActionLink("Excluir", "Delete", new { id = item.IDNoticias })
            </td>
        </tr>
    }

</table>